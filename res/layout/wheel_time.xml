<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BDE4F4"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/linearTop"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#BDE4F4" >

        <RelativeLayout
            android:id="@+id/linearBack"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
             >

            <Button
                android:id="@+id/popu_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#cccccc"
                android:text="返回"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linearOK"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp" >

            <Button
                android:id="@+id/popu_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#cccccc"
                android:text="确定"
                android:textSize="15sp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view_line2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#0000ff" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <com.example.androiddateselector.wheel.wheel.WheelView
                android:id="@+id/wheelM"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_marginTop="2dp" />

            <com.example.androiddateselector.wheel.wheel.WheelView
                android:id="@+id/wheel1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_weight="1.0" />

            <com.example.androiddateselector.wheel.wheel.WheelView
                android:id="@+id/wheel2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_weight="1.0" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <View
                android:id="@+id/view1"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="55dip"
                android:background="#cccccc" />

            <View
                android:id="@+id/view2"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_below="@id/view1"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="45dip"
                android:background="#cccccc" />
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>